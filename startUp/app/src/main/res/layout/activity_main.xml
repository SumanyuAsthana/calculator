<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:divider="@android:color/background_light"
    android:orientation="vertical"
    android:padding="15pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/screenMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="20pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buAllClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buClearAll"
                android:text="AC"
                android:textSize="24sp"
                tools:text="AC" />

            <Button
                android:id="@+id/buPlusMinus"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="+-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buPercentage"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buOperationEvent"
                android:text="%"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOperationEvent"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu7"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:layout_marginRight="1pt"

                android:id="@+id/bu8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu9"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOperationEvent"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu4"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu5"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu6"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOperationEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/bu1"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu2"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu3"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightGray"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="buOperationEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/lightGray"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buDot"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1pt"
            android:layout_weight="0"
            android:background="@color/lightGray"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/buEquals"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/orange"
            android:onClick="buEqualsEvent"
            android:text="="
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>